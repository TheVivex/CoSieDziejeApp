<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WRWpr.Wydarzenia"
             Title="Wydarzenia">
    
    <Grid RowDefinitions="0.10*, 0.90*" ColumnDefinitions="0.20*, 0.40*, 0.40*" Padding="10" Margin="10">
        <Label Text="Kat." Grid.Column="0" Grid.Row="0"/>
        <Label Text="      Wydarzenie" Grid.Column="1" Grid.Row="0"/>
        <Label Text="              Miejsce" Grid.Column="2" Grid.Row="0"/>
        <CollectionView Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" x:Name="eventsCollectionView" SelectionMode="Single">
            <CollectionView.ItemsSource>
                <Array Type="{x:Type x:String}">
                    <x:String>Bananas1</x:String>
                    <x:String>Bananas2</x:String>
                    <x:String>cosinnego3</x:String>
                </Array>          
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Label Text="{Binding .}" FontSize="24"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid> 
</ContentPage>